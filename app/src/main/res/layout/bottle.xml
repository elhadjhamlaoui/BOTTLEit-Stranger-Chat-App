<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">


    <RelativeLayout
        android:id="@+id/paper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/paper1"
        android:paddingStart="40dp"
        android:paddingTop="70dp"
        android:paddingEnd="40dp"
        android:paddingBottom="60dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:fadingEdgeLength="30dp"
            android:requiresFadingEdge="vertical">

            <android.support.text.emoji.widget.EmojiEditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"

                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:ems="10"
                android:gravity="top"
                android:hint="write your message ! "
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textSize="24sp" />

        </ScrollView>

    </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="New bottle"
        android:textSize="30sp" />


    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/send"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/style"
        android:layout_margin="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:animateLayoutChanges="false"
                    android:animationCache="false"
                    android:gravity="top"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"

                        app:rippleColor="@color/transparent"
                        app:srcCompat="@drawable/normal" />

                    <android.support.design.widget.FloatingActionButton
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        android:id="@+id/billy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/billy"
                        android:visibility="gone"
                        />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/black" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/harry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        app:rippleColor="@color/transparent"

                        app:srcCompat="@drawable/harry" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/lemon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/lemon" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/onepiece"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/onepiece" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/starwars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/starwars" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/band"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/band" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/candy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/candy" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/drift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/drift" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/freak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/freak" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/mario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/mario" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/montague"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/montague" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/orange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/orange" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/snacker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/snacker" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/texas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        app:rippleColor="@color/transparent"
                        android:layout_weight="1"

                        app:srcCompat="@drawable/texas" />

                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toStartOf="@+id/style"
        android:gravity="end">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:animateLayoutChanges="false"
                    android:animationCache="false"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"

                        app:srcCompat="@drawable/spaper1" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper2" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper3" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper4" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper5" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper6" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper7" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper8" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper9" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/float10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:backgroundTint="@color/cardview_light_background"
                        app:fabSize="mini"
                        android:visibility="gone"

                        app:srcCompat="@drawable/spaper10" />
                </LinearLayout>
            </HorizontalScrollView>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:backgroundTint="@color/cardview_light_background"
        app:srcCompat="@drawable/wings" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_send" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="@color/cardview_light_background"
        app:srcCompat="@drawable/addvideo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/video"
        android:clickable="true"
        app:backgroundTint="@color/cardview_light_background"
        app:srcCompat="@drawable/addimage" />


</RelativeLayout>