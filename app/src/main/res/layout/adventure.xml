<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    app:backgroundTint="@color/cardview_light_background"
                    app:elevation="2dp"

                    app:srcCompat="@drawable/delete_big" />

                <TextView
                    android:id="@+id/new_adventure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/cancel"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="New Story"
                    android:textSize="30sp" />
            </RelativeLayout>

            <android.support.text.emoji.widget.EmojiEditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/but_text_area"
                android:ems="10"
                android:hint="@string/adventure_title"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:padding="10dp"
                android:textColor="@color/cardview_dark_background" />


            <android.support.text.emoji.widget.EmojiEditText
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/but_text_area"
                android:ems="10"
                android:gravity="top"
                android:hint="@string/adventure_body"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:maxLength="5000"
                android:overScrollMode="always"
                android:padding="10dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/cardview_light_background"
                    app:elevation="1dp"
                    app:srcCompat="@drawable/addvideo" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/cardview_light_background"
                    app:elevation="1dp"
                    app:srcCompat="@drawable/addimage" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/cardview_light_background"
                    app:elevation="1dp"
                    app:srcCompat="@drawable/paper3" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/feather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:backgroundTint="@color/cardview_light_background"
                    app:elevation="1dp"
                    app:srcCompat="@drawable/ic_feather" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fillViewport="true">

                            <LinearLayout
                                android:id="@+id/lin1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:animateLayoutChanges="false"
                                android:animationCache="false"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/normal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:clickable="true"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"
                                    app:srcCompat="@drawable/normal" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/billy"

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"
                                    app:srcCompat="@drawable/billy" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/black"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/black" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/harry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/harry" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/lemon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/lemon" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/onepiece"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/onepiece" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/starwars"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/starwars" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/band"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/band" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/candy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/candy" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/drift"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/drift" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/freak"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/freak" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/mario"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/mario" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/montague"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/montague" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/orange"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/orange" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/snacker"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/snacker" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/texas"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"
                                    app:rippleColor="@color/transparent"

                                    app:srcCompat="@drawable/texas" />

                            </LinearLayout>
                        </HorizontalScrollView>
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="end">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="2dp">

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fillViewport="true">

                            <LinearLayout
                                android:id="@+id/lin2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:animateLayoutChanges="false"
                                android:animationCache="false"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper1" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper2" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper3" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper4" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper5" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper6" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper7" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper8" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper9" />

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/float10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:backgroundTint="@color/cardview_light_background"
                                    app:fabSize="mini"

                                    app:srcCompat="@drawable/spaper10" />
                            </LinearLayout>
                        </HorizontalScrollView>
                    </android.support.v7.widget.CardView>


                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel2"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/but_ac"
                android:foregroundGravity="bottom"
                android:text="@string/send"
                android:textColor="@drawable/ac_text_color" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/uploadImgae"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:text="@string/uploadingimage"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/imageProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentTop="false"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:paddingTop="-10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/uploadVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/uploadingvideo"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/videoProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:paddingTop="-10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/animationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:visibility="invisible">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            app:lottie_autoPlay="false"
            app:lottie_rawRes="@raw/success" />

    </RelativeLayout>

</RelativeLayout>